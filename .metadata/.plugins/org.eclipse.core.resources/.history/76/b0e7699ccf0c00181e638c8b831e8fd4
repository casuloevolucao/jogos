package aula;

public class Main {
	
	public static void main(String[] args) {
		
		int idade = 24;
		
		System.out.println("minha idade é "+idade);
		
		idade = 18;
		
		System.out.println("agora minha idade é " +idade);
		
		idade=20;
		
		System.out.println("agora minha idade é " +idade);
	}

}
/* exemplos básicos de como usar uma variavel em java*/